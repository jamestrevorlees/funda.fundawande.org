<!-- Language Preference Modal -->
<div id = "language-preference" class="modal" tabindex="-1" role="dialog">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content px-3 py-3">
      <div class="d-flex m-3">
        <div class = "d-flex justify-content-center align-items-center w-100">
          <h5 class="modal-title text-center pl-3"><strong>Language Preference/<br>Ukukhetha Ulwimi</strong></h5>
        </div>
      </div>
      <div class="modal-body">
        <form class = "fw-form" method = "GET">
          <div class = "form-group text-center">
            <div class="btn-group" role="group" aria-label="Change Language buttons">
              <button class = "btn button-tertiary {% if lang.id == 'eng'%} active {% endif %}" type = "submit" name = "lang" value ="eng">English</button>
              <button class = "btn button-tertiary {% if lang.id == 'xho'%} active {% endif %}" type = "submit" name = "lang" value ="xho">Xhosa</button>
            </div>
          </div>
        </form>
        {% if user.language_preference %}
          <div class = "text-center"><p>The course will now be in English. You can click the change language button at any time to change this setting</p></div>
          <div class = "py-3 text-center">
            <button id = "set-language-preference" class = "btn btn-lg primary-btn-fill" >Continue<span class = "p-2">{{source ('/assets/arrow_right.svg')}}</span></button>
          </div>
        {% endif %}

      </div>
    </div>
  </div>
</div>