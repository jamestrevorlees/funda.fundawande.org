<!-- Terms and Conditions Modal -->
<div id = "language-preference" class="modal" tabindex="-1" role="dialog">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content px-3 py-3">
      <div class="d-flex m-3">
        <div class = "d-flex justify-content-center align-items-center w-100">
          <h5 class="modal-title text-center pl-3"><strong>Language Preference/<br>Ukukhetha Ulwimi
</strong></h5>
        </div>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span class = "primary-svg-icon-fill">{{source('/assets/close_icon.svg')}}</span>
        </button>
      </div>
      <div class="modal-body">
        <form class = "fw-form" method = "GET">
          <div class = "form-group mx-auto text-center">
              <div class="btn-group btn-group-toggle" data-toggle="buttons">
                <label class="btn button-tertiary active">
                  <input type="radio" name="lang" value="eng" id="eng" autocomplete="off" checked> English
                </label>
                <label class="btn button-tertiary ">
                  <input type="radio" name="lang" value="xho" id="xho" autocomplete="off"> Xhosa
                </label>
              </div>
          </div>
          <div class = "form-group py-3 text-center">
            <button type = "submit" value = "submit" class = "btn btn-lg primary-btn-fill" >Continue/Qhubeka<span class = "p-2">{{source ('/assets/arrow_right.svg')}}</span></button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>