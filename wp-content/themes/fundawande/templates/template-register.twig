{# Choose base on which to extend this template #}
{% extends "login-base.twig" %}

{# Import macros for use in this template #}
{% import "mixins.twig" as mixin %}

{# Twig block to be included in Base.twig #}
{% block content %}
    <div class="wrapper registration-wrapper login-wrapper  background-secondary d-flex align-items-center" xmlns="http://www.w3.org/1999/html">
        <div class="container  ">
            <div class="row justify-content-center">
                <!-- Login Form -->
                <div class="col-12 col-md-6 card  my-md-5 px-md-5 py-5">
                    <div class="text-center login-header">
                        {{ source('assets/logos/fw_logo_landscape.svg') }}
                        <h5 class = "mt-4 login-language-label">Change language/Tshintsha ulwimi</h5>
                        <form method="GET">
                            <div class = "btn-group" role = "group" aria-label="Change Language buttons">
                                    <button class = "btn login-language-button {% if lang.id == 'eng'%} active-button {% endif %}" type = "submit" name = "login_lang" value ="eng">English</button>
                                    <button class = "btn login-language-button {% if lang.id == 'xho'%} active-button {% endif %}" type = "submit" name = "login_lang" value ="xho">Xhosa</button>
                            </div>
                        </form>
                        <h1 class="mt-4">{{post.get_field(lang.prefix~'title')}}</h1>

                    </div>
                    <script>
//                        function onSubmit(token) {
//                            document.getElementById("registration-form").submit();
//                        }
                    </script>
                    {% if register_submitted %}
                        {% if register_failed %}
                            <div class="login-alert p-3 my-3" role="alert">
                                <p>{{post.get_field(lang.prefix~'registration_failed')}}</p>
                                <div class = " text-center">
                                    <a class = "d-inline-block primary-btn-outline btn mr-3 text-center" href = "/login">{{post.get_field(lang.prefix~'login_link')}}</a>
                                    <a class = "d-inline-block fw-get-help primary-btn-outline btn text-center" href = "#">{{post.get_field(lang.prefix~'get_help_link')}}</a>
                                </div>
                            </div>
                        {% else %}
                            <div class="login-alert p-3 my-3" role="alert">
                                <p>{{post.get_field(lang.prefix~'registration_success')}}</p>
                                <div class = " text-center"><a class = " primary-btn-outline btn text-center" href = "/login">{{post.get_field(lang.prefix~'login_link')}}</a> </div>
                            </div>
                        {% endif %}
                    {% endif %}
                    {% if (not register_submitted) or (register_submitted and register_failed) %}
                        <form id='fw-registration-form' action="?" class="px-4"  method="post">

                            <div class="reg-username mb-3">
                                <label for="user_login">{{post.get_field(lang.prefix~'id_number_label')}}</label>
                                <input type="text" class="form-control" name="user_login" id="user_login" size="30"  required />
                            </div>
                            <div class="reg-username mb-3">
                                <label for="first_name">{{post.get_field(lang.prefix~'first_name_label')}}</label>
                                <input type="text" class="form-control" name="first_name" id="first_name" size="30" value="{{ first_name }}" required />
                            </div>
                            <div class="reg-username mb-3">
                                <label for="last_name">{{post.get_field(lang.prefix~'last_name_label')}}</label>
                                <input type="text" class="form-control" name="last_name" id="last_name" size="30" value="{{ last_name }}" required />
                            </div>
                            <div class="reg-username mb-3">
                                <label for="school">{{post.get_field(lang.prefix~'school_label')}}</label>
                                <input type="text" class="form-control" name="school" id="school" size="30" value="{{ school }}" required />
                            </div>
                            <div class="reg-username mb-3">
                                <label for="province">{{post.get_field(lang.prefix~'province_label')}}</label>
                                <select  name="province" id="province" class="custom-select">
                                    <option selected>{{post.get_field(lang.prefix~'province_instructions')}}</option>
                                    <option value="Eastern Cape">Eastern Cape</option>
                                    <option value="Free State">Free State</option>
                                    <option value="Gauteng">Gauteng</option>
                                    <option value="KwaZulu-Natal">KwaZulu-Natal</option>
                                    <option value="Limpopo">Limpopo</option>
                                    <option value="Mpumalanga">Mpumalanga</option>
                                    <option value="North West">North West</option>
                                    <option value="Northern Cape">Northern Cape</option>
                                    <option value="Western Cape">Western Cape</option>
                                </select>
                            </div>
                            <input type="hidden" class="form-control" name="action"   id="action" value="register" />
                            {# <div class="g-recaptcha" data-sitekey="6LcIeHMUAAAAANY5bUx0vZc4-DoW3td9RszxIErQ"></div> #}
                            <button type="submit" class="btn w-100 mt-3 primary-btn-fill ">
                                {{post.get_field(lang.prefix~'registration_button_label')}}
                            </button>
                            <br/>
                        </form>
                    {% endif %}
                    
                    <div class = "my-3 text-center">
                        <a class = "login-help login-noerror" href = "/login">{{post.get_field(lang.prefix~'user_account_exists')}}</a>
                    </div>

                </div>
            </div>
        </div>
    </div><!-- #wrapper -->
{% endblock %}
