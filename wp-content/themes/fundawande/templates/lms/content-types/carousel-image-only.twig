<div id="carousel-image-only" class="carousel slide p-4" data-ride="carousel">
  <div class="carousel-inner">
        {% for item in content.carousel_items %}
            <div class="carousel-item  {% if loop.index == 1 %}active{% endif %}">
                <img class = "d-block lesson-carousel-image" src ="{{ item.image }}">
            </div>
        {% endfor %}
  </div>
    <a class="lesson-carousel-control carousel-control-prev mx-5" href="#carousel-image-only" role="button" data-slide="prev">
        <div class = "lesson-carousel-control-icon p-3">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </div>
    </a>
    <a class="lesson-carousel-control carousel-control-next mx-5" href="#carousel-image-only" role="button" data-slide="next">
        <div class = "lesson-carousel-control-icon p-3">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </div>
    </a>
</div>