<!-- Content Type: Image Pulled Right -->
<div class = "container my-5">
    <hr>
    <div class = "row">
        <div class = "col-sm-12 col-md-6 pt-4">
            {# Remove whitespace from beginning and end of the file name before appending to media url #}
            {% set file_name =  content.image_file_name|trim %}
            <img class = "d-block lesson-carousel-image" src ="{{ media_url~file_name }}">
        </div>
        <div class = "col-sm-12 col-md-6 pt-4">
            {{content.text}}
        </div>
    </div>
</div>
