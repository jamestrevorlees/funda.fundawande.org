
<!-- Content Type: Carousel Pulled Left With Text -->
<div class = "container my-5">
    <hr>
    <div class = "row">
        <div class = "col-12 col-md-6 pt-4">
            <div id="carousel-pulled-left-with-text" class="carousel slide" data-ride="carousel">
                {#<ol class="carousel-indicators">
                    {% for item in content.carousel_items %}
                    <li data-target="#carousel-with-text" data-slide-to="{{ loop.index - 1 }}" class="{% if loop.index == 1 %}active{% endif %}">{{loop.index}}</li>
                    {% endfor %}
                </ol>#}
                <div class="" role="listbox">
                    {% for item in content.carousel_items %}
                        <div class="carousel-item  {% if loop.index == 1 %}active{% endif %}">
                            <div class = "lesson-image-wrapper">
                                <img class = "d-block lesson-carousel-image" src ="{{ media_url~item.image_file_name }}">
                                <!-- Navigation Buttons -->
                                <div class = "container">
                                    <div class = "row">
                                        <div class = "col-12">
                                        <a class="lesson-carousel-control lesson-carousel-control-prev" href="#carousel-pulled-left-with-text" role="button" data-slide="prev">
                                            <div class = "lesson-carousel-control-icon d-flex justify-content-center">
                                                <span class="module-svg-icon-fill-{{module_number}}" aria-hidden="true">{{source('/assets/carousel_prev.svg')}}</span>
                                                <span class="sr-only">Previous</span>
                                            </div>
                                        </a>
                                        <a class="lesson-carousel-control lesson-carousel-control-next" href="#carousel-pulled-left-with-text" role="button" data-slide="next">
                                            <div class = "lesson-carousel-control-icon d-flex justify-content-center">
                                                <span class="module-svg-icon-fill-{{module_number}}" aria-hidden="true">{{source('/assets/carousel_next.svg')}}</span>
                                                <span class="sr-only">Next</span>
                                            </div>
                                        </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <h4 class = "text-center mt-5"><strong>{{ item.title }}</strong></h4>
                            <p class = "text-center m-2">{{ item.text }}</p>
                            {#<p>Image {{loop.index}} of {{loop|length}}</p>#}
                        </div>
                    {% endfor %}
                </div> 
            </div>
        </div>
        <div class = "col-12 col-md-6 pt-4">
            {{content.text}}
        </div>
    </div>
</div>