<div id="carousel-with-text" class="carousel slide p-4" data-ride="carousel">
    {#<ol class="carousel-indicators">
        {% for item in content.carousel_items %}
        <li data-target="#carousel-with-text" data-slide-to="{{ loop.index - 1 }}" class="{% if loop.index == 1 %}active{% endif %}">{{loop.index}}</li>
        {% endfor %}
    </ol>#}
    <div class="carousel-inner" role="listbox">
            {% for item in content.carousel_items %}
                <div class="carousel-item  {% if loop.index == 1 %}active{% endif %}">
                    <img class = "d-block lesson-carousel-image" src ="{{ item.image }}" class="">
                    <h4>{{ item.title }}</h4>
                    <p>{{ item.text }}</p>
                </div>
            {% endfor %}
    </div>
    <a class="carousel-control-prev" href="#carousel-with-text" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carousel-with-text" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
