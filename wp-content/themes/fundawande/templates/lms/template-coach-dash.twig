{# Choose base on which to extend this template #}
{% extends "base.twig" %}

{# Import macros for use in this template #}
{% import "mixins.twig" as mixin %}

{# Twig block to be included in base.twig #}
{% block content %}
    <div class="wrapper coach-dash-wrapper" id="lms-page-wrapper" xmlns="http://www.w3.org/1999/html">

        {# Sign up information band #}
        <section class="container ">
            <div class="row">
                <div class="col-12">
                    <h1 class="lbreaker-lms-purple mt-4">Coach dashboard</h1>
                </div>
                <div class="col-12 mt-4">
                    <div class="row">
                        <div class="col-auto px-3 mb-4 mb-md-0">
                            <select type="select" class="form-control custom-select coach-filter"   id="courseSelect"  style="max-width:120px" placeholder="" value="" required>
                                <option value=""  selected >All course</option>
                                {% for course in courses %}
                                    <option value="{{course.ID }}" {% if selected_course ==  course.ID %}selected{% endif %}  >{{course.title}}</option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="col-auto px-3 ">
                            <select type="select" class="form-control custom-select coach-filter " id="coachSelect" style="max-width:120px"  placeholder="" value="" required>
                                <option value="" disabled selected >Filter by coach</option>
                                <option value=""  >All coaches</option>
                                <option diabled  value="" >No coaches available yet</option>

                            </select>
                        </div>
                        <div class="col-auto px-3 ">
                            <select type="select" class="form-control custom-select coach-filter " id="moduleSelect" style="max-width:120px" placeholder="" value="" required>
                                <option value=""  selected >All modules</option>
                                {% for module in modules %}
                                    <option value="{{module.term_id}}" {% if module_id ==  module.term_id %}selected{% endif %}  >{{module.name}}</option>
                                {% endfor %}
                
                            </select>
                        </div>
                        <div class="col-auto px-3 ">
                            <select type="select" class="form-control custom-select coach-filter " id="userSelect" style="max-width:120px" placeholder="" value="" required>
                                <option value=""  selected >All teachers</option>
                                {% for key, teacher in assessments_data%}
                                    <option value="{{key}}" {% if key == teacher_id %}selected{% endif %} >{{teacher.name}}</option>
                                {% endfor %}
                
                            </select>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row no-gutters">
                <div class="col-12  py-md-4 ">



                    <div class="my-4">
                       <table id="data-table" class="resources table table-bordered  table-striped" cellpadding="0" cellspacing="0" border="0" width="100%">
                            <thead class="background-primary-light">
                            <tr>
                                <th>Teacher</th>
                                <th>Assessment</th>
                                <th>Module</th>
                                <th>Submission date</th>
                                <th>Feedback</th>
                                <th>Status</th>
                                <th>Response status</th>
                                <th>Review</th>

                            </tr>
                            </thead>
                            <tbody>
                            {% for key, teacher in assessments_data %}
                                {% for key2, assessment in teacher.assessments %}
                                    <tr>

                                        <td>{{ teacher.name }}</td>
                                        <td>{{ assessment.lesson_name }}</td>
                                        <td>{{ assessment.week.name }}</td>
                                        <td>{{ assessment.date|date('d M Y') }}</td>
                                        <td class="feedback-indicator">{% if assessment.needs_feedback %}
                                                {% if assessment.feedback %}Yes{% else %}No{% endif %}
                                            {% else %}MCQ{% endif %}</td>
                                        <td>{% if assessment.status == 'graded' %}Complete{% else %}Submitted{% endif %}</td>
                                        <td>{% if assessment.response_status %}{{assessment.response_status}}{% else %}-{% endif %}</td>
                                        <td><a class="review-assessment" {% if assessment.needs_feedback %}href="/review-assessment?assessment_id={{ assessment.lesson_id }}&user_id={{ key }}"{% else %}href="/wp-admin/admin.php?page=sensei_grading&user={{key}}&quiz_id={{ assessment.quiz_id}}"{% endif %}  target="_blank">Review</a></td>
                                    </tr>
                                {% endfor %}
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
        </section>

    </div><!-- #wrapper -->
{% endblock %}
