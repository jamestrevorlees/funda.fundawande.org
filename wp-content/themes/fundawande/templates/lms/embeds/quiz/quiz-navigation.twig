
<div id="navigation-links">
    <div class="container pb-5">
        <div class="row my-0 justify-content-between">
            <!-- Previous Lesson Navigation Button -->
            {% include "lms/embeds/lesson/lesson-navigation-previous.twig" %}
            <div class=" lesson-navigation-bottom col-12 col-lg-auto text-center py-1 py-md-0">
                {% if quiz_retry %}
                   {% include "lms/embeds/quiz/quiz-navigation-review" %}
                   {% include "lms/embeds/quiz/quiz-navigation-retry" %}
                {% endif %}
                {% if quiz_resubmit and not quiz_retry and not lesson_complete %}
                    {% include "lms/embeds/quiz/quiz-navigation-retry" %}
                {% endif %}
                {% if lesson_complete %}
                    {% if sub_unit_meta.is_last_in_unit %}
                        {% if show_notifications %}
                            {% include 'lms/embeds/modals/modal-end-unit.twig' %}

                            {# If a custom feedback message has been added for this lesson, fire a modal which displays the feedback before showing the end of unit modal #}
                            {% if post.get_field('custom_feedback_message') %}
                                {% include '/lms/embeds/modals/modal-end-lesson.twig' %}
                            {% endif %}

                            {% include "lms/embeds/lesson/lesson-navigation-end-unit.twig" %}
                    {% else %}
                        {% include "lms/embeds/lesson/lesson-navigation-next.twig" %}
                    {% endif %}
                {% elseif (quiz_resubmit and not quiz_retry) or (quiz_retry and quiz_attempts > 3) %}
                    {% include "lms/embeds/lesson/lesson-navigation-next.twig" %}
                {% endif %}
                {% if not lesson_complete and not quiz_resubmit and not quiz_retry %}
                    {% include "lms/embeds/lesson/quiz-navigation-submit.twig" %}
                {% endif %}
            </div>
        </div>
    </div>
</div>
