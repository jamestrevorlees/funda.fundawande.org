{# Choose base on which to extend this template #}
{% extends "base.twig" %}

{# Import macros for use in this template #}
{% import "mixins.twig" as mixin %}

{# Twig block to be included in Base.twig #}
{% block content %}
    <div id="page-wrapper" class="wrapper  background-secondary " xmlns="http://www.w3.org/1999/html">
        <div class="container-fluid my-4">
            <div class="row my-3">
                <div class="col-12">
                    <div class="card px-md-5 py-lg-5 p-3">
                        <h1 class="pb-3 text-center">My Profile</h1>
                        <div class="row mt-4 ">
                            <div class="col-12">
                            <div class="card justify-content-between justify-content-center primary-border"> 
                                <div class="row  no-gutters">
                                    <div class="col-md-6 p-4">
                                        <h2 class="text-bold">Current course: </h2>
                                        <h4>{{course.course_title}}</h4>
                                        <p class="mt-3">Progress: {{course_progress}}%</p>
                                    </div>
                                    <div class="col-md-6 p-4 d-flex justify-content-center justify-content-md-end align-items-center">
                                        <a class = "btn btn-lg primary-border primary-bg module-nav-button p-3 rounded d-inline-block" href="{{course.link}}">
                                        <p class = " mb-0" style="color:white">Go to course<img class = "p-2 " src = "/wp-content/themes/fundawande/assets/arrow_right.svg"></p></a>
                                    </div>
                                </div>
                            </div>
                            </div>
                            
                        </div>
                        {% embed "embeds/profile_form.twig" %}

                        {% endembed %}
                    </div>
                </div>
            </div>
        </div>
    </div><!-- #wrapper -->
{% endblock %}
