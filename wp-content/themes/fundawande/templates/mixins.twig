{# Add video player #}
{% macro videoPlayer(src) %}
    {% import _self as mixins %}
    <div class="player">
        <video class="player__video viewer" >
            <source src="{{ src }}" type="video/mp4">
        </video>

        <div class="player__start  align-items-center justify-content-center">
            <span class="svg-green">{{ source('/assets/Play_button.svg') }}</span>
        </div>

        <div class="player__controls d-flex">
            <div class="col-12">
                <div class="progress ">
                    <div class="progress__filled"></div>
                </div>
            </div>
            <div class="col-12 d-flex justify-content-between">
                <div class="d-flex align-items-center">
                    <div class="d-flex align-items-center">

                        <button class="player__button toggle" title="Toggle Play">â–º</button>
                    </div>

                    <div class="d-flex align-items-center sound-box"><span class="sound d-flex">{{ source('/assets/Sound_icon.svg') }}</span> <input type="range" name="volume" class="player__slider" min="0" max="1" step="0.05" value="1">
                    </div>

                    <button data-skip="-30" class="player__button">{{ source('/assets/Back_30_icon.svg') }}</button>
                </div>

                <div class="player__text">
                    <span class="current-time">0:00</span> / <span class="duration-time">0:00</span>
                </div>
                <div class="d-flex align-items-center">
                {#<input type="range" name="playbackRate" class="player__slider" min="0.5" max="2" step="0.1" value="1">#}
                    <button class='player__button download' title='' accesskey="" ]>{{ source('/assets/Download_video_icon.svg') }}</button>
                    <div class="settings-block">
                        <button class='player__button settings-toggle' title='toggle full screen' onclick='toggleSettings();'>{{ source('/assets/Cog_icon.svg') }}</button>
                        <div class="settings">
                            <button name="playbackRate" class="player__button speed" value="0.5">0.5</button>
                            <button name="playbackRate" class="player__button speed" value="1">1</button>
                            <button name="playbackRate" class="player__button speed" value="1.5">1.5</button>
                        </div>
                    </div>

                    <button class='player__button fullscreen' title='toggle full screen' accesskey="T" onclick='toggleFullScreen();'>{{ source('/assets/Fullscreen_icon.svg') }}</button>

                </div>
            </div>
        </div>
    </div>
{% endmacro %}