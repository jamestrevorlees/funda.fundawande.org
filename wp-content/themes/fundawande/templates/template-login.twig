{# Choose base on which to extend this template #}
{% extends "login-base.twig" %}

{# Import macros for use in this template #}
{% import "mixins.twig" as mixin %}

{# Twig block to be included in Base.twig #}
{% block content %}
    <div class="wrapper login-wrapper background-secondary d-flex" xmlns="http://www.w3.org/1999/html">
        <div class="container card login-card m-5">
            <div class="row login-row my-5">
                {% if user_logged_in %}
                    <div class = "row">
                        <div class = "col">
                            <div class = "text-center">
                                <h2>{{ post.get_field(lang.prefix~'logout_message') }}</h2>
                                <a class = "btn btn-info" href = "{{ log_out_link }}">{{ post.get_field(lang.prefix~'logout_button') }}</a>
                            </div>
                        </div>
                    </div>
                {% else %}
                    <!-- Login Form -->
                    <div class="col-sm-12 col-md-6 login p-5">
                        <div class="text-center login-header">
                            <img class="mx-auto img img-fluid" src="http://fundawande.org/wp-content/uploads/2017/09/cropped-cropped-logo-long-transparent-background.png">
                            <h5 class = "mt-4 login-language-label">Change language/Tshintsha ulwimi</h5>
                            <form method="GET">
                                <div class = "btn-group" role = "group" aria-label="Change Language buttons">
                                        <button class = "btn login-language-button {% if lang.id == 'eng'%} active {% endif %}" type = "submit" name = "login_lang" value ="eng">English</button>
                                        <button class = "btn login-language-button {% if lang.id == 'xho'%} active {% endif %}" type = "submit" name = "login_lang" value ="xho">Xhosa</button>
                               </div>
                            </form>
                        </div>
                        <div class = "login-form">
                            {% do action('show_login_form') %}
                            {% if error_message %}
                                <div class="login-alert p-3" role="alert"> 
                                    <p>{{ post.get_field(lang.prefix~error_message) }}</p>
                                    <div class = "my-3 text-center"><a class = "login-help login-error text-center" href = "#">Get help logging in</a> </div>   
                                </div>
                            {% else %}
                                <div class = "my-3 text-center"><a class = "login-help login-noerror " href = "#">Get help logging in</a> </div>   
                            {% endif %}
                        </div>
                    </div>
                    <!-- Desktop sidebar -->
                    <div class="col-sm-12 col-md-6 sidebar p-5">
                        <div class="text-center sidebar-img"><img class="img img-fluid" src="http://fundawande.org/wp-content/uploads/2017/09/cropped-cropped-logo-long-transparent-background.png"></div>
                        <h2 class="my-3 text-center">{{ post.get_field(lang.prefix~'sidebar_title') }}</h2>
                        {{ post.get_field(lang.prefix~'sidebar_content') }}
                    </div>
                {% endif %}
            </div>
        </div>
    </div><!-- #wrapper -->
{% endblock %}
